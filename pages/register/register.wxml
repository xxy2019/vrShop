<view class="head" style="background-color:#638E88;">
  <navigator  url="../index/index">
    <image mode="aspectFit" src="../../icon/back.png" class="back"></image>
    <view class="head_title">{{title=="register"?"注册账号":"忘记密码"}}</view>
  </navigator>
</view>
<view class="page">
    <view class='top_picture'> 
        <image src="../../icon/vrlogo.png" mode="aspectFit" class="logo"></image>
    </view>
    <form bindsubmit="formSubmit">
      <view class="my_form">
        <view class="title">商家名称：</view>
        <input type="text" class="my_input" placeholder="{{title=='register'?'注册后不可更改，请慎重':''}}" name="seller"/>
        <view class="title">手机号：<view wx:if="{{!isphone}}" style="color:red;float:right">您输入手机号不是11位</view></view>
        <input type="number" name="phone" class="my_input" bindblur="getPhone"/>
        <view class="title">验证码：<view wx:if="{{!rightcode}}" style="color:red;float:right">验证码错误</view></view>
        <input type="text" value="" class="my_code" bindblur="codeInput"/>
        <button size="mini" class="code_btn" bindtap="getCode">获取验证码</button>
        <view class="title">密码：</view>
        <input type="text" name="password" password="true" class="my_input"/>
        <view class="title">确认密码：<view wx:if="{{!ispwd}}" style="color:red;float:right">输入密码错误</view></view>
        <input type="text" bindblur="getPwd" bindfocus="hidden" password="true" class="my_input"/>
        <button  class="my_btn" form-type="submit">提交</button>
      </view>
    </form>  
</view>

